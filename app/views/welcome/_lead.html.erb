<div id="modal" class="modal">
  <div class="modal-content">
    <span id="closeModal" class="close">&times;</span>
    <h2>Add Lead</h2>
    <form id="leadForm" class="form" action="<%= leads_path %>" method="post">
      <label for="name">Name:</label>
      <input type="text" id="first_name" name="lead[first_name]" required><br>

      <label for="cell">Cell:</label>
      <input type="text" id="cell" name="lead[phone]" required><br>

      <label for="email">Email:</label>
      <input type="email" id="email" name="lead[email]" required><br>
      <input type="product_id" id="product" name="lead[product_id]" required><br>

      <input type="submit" value="Post">
    </form>
  </div>
</div>
