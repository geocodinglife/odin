<div id="modal" class="modal">
  <div class="modal-content">
    <%= image_tag "Contenido/Cerrar.svg", id: "x-cerrar-alerta", id: "closeModal", class: "close" %>

    <form id="leadForm" class="form" action="<%= leads_path %>" method="post">
      <label for="name">Name:</label>
      <input type="text" id="first_name" name="lead[first_name]" required><br>

      <label for="cell">Cell:</label>
      <input type="text" id="cell" name="lead[phone]" required><br>

      <label for="email">Email:</label>
      <input type="email" id="email" name="lead[email]" required><br>

      <input type="hidden" name="product_id" id="product">

      <input type="submit" value="Post" class="button-popup">
    </form>
  </div>
</div>