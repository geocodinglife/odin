<style>
  .user-section {
    display: flex;
    flex-direction: column;
    width: 100%;
  }

  .user-info {
    color: white;
    text-align: center;
    font-size: 0.875rem;
    margin-top: 1.25rem;
  }

  .logout-button {
    display: flex;
    justify-content: center;
    margin-top: 0.5rem;
  }

  .logout-button-style {
    padding: 0.25rem 0.75rem;
    background-color: #e53e3e;
    color: white;
    font-weight: 600;
    font-size: 0.875rem;
    border-radius: 0.25rem;
    cursor: pointer;
  }

  .section-title {
    font-size: 1.25rem;
    font-weight: bold;
    color: white;
    text-align: center;
    margin-top: 0.75rem;
    margin-bottom: 0.5rem;
  }

  .user-rooms {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding: 0 0.625rem;
    width: 100%;
  }
</style>

<section class="user-section">
  <span class="user-info">Usuario: <strong><%= current_user.first_name %></strong></span>
  <div class="logout-button">
    <%= button_to 'Log out', destroy_user_session_path, method: :delete, data: { turbo: false }, class: 'logout-button-style' %>
  </div>
  <h3 class="section-title">My Rooms</h3>

  <div class="user-rooms" id="user_<%= current_user.id %>_rooms">
    <% current_user.rooms.all.each do |room| %>
      <%= render 'shared/room', room: room %>
    <% end %>
  </div>
</section>
