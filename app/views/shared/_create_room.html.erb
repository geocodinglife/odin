<style>
  .new-room {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    margin-bottom: 5px;
  }

  .new-room-title {
    color: white;
    font-weight: 600;
    font-size: 0.875rem;
    text-align: center;
  }

  .new-room-button {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background-color: #2b6cb0;
    color: white;
    font-weight: 600;
    font-size: 0.875rem;
    text-decoration: none;
    border-radius: 0.25rem;
    transition: background-color 0.3s ease;
  }

  .new-room-button:hover {
    background-color: #1e4e8e;
  }
</style>

<%= turbo_frame_tag 'room_form' do %>
  <section class="new-room">
    <h3 class="new-room-title">Want to start a new conversation?</h3>
    <%= link_to "Create new room", new_room_path, id: "new-room-link", class: "new-room-button" %>
  </section>
<% end %>
