<section>
  <div class="create-product">
    <div class="product-information">
      <% if !user_signed_in? %>
        <%= form_with(model: @product) do |form| %>
          <% if @product.errors.any? %>
            <div style="color: red">
              <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

              <ul>
                <% @product.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div>
            <%= form.label :first_name, style: "display: block" %>
            <%= form.text_field :first_name, multiple: true %>
          </div>

            <div>
            <%= form.label :email, style: "display: block" %>
            <%= form.text_field :email, multiple: true %>
          </div>

            <div>
            <%= form.label :phone, style: "display: block" %>
            <%= form.text_field :phone, multiple: true %>
          </div>

          <div>
            <%= form.label :category_id, "Select Category", style: "display: block" %>
            <%= form.collection_select :category_id, @categories, :id, :name, prompt: 'Select a category' %>
          </div>
          <div>
            <%= form.label :product_name, style: "display: block" %>
            <%= form.text_field :name %>
          </div>

          <div>
            <%= form.label :price, style: "display: block" %>
            <%= form.text_field :price %>
          </div>

          <div style="display: flex; align-items: center; justify-content: space-between;">
            <%= form.label :images, "Adjuntar imagenes" %>

            <%= form.file_field :images, multiple: true, id: "image-upload", style: "display: none;" %>

            <%= label_tag :images, image_tag("Contenido/Adjuntar.svg"), for: "image-upload", style: "cursor: pointer;" %>
          </div>

          <div>
            <%= form.label :description, style: "display: block-inline" %>
            <%= form.rich_text_area :description %>
          </div>

          <div>
            <%= form.submit class: "create-product-button" %>
          </div>
        <% end %>
      <% else %>
        <%= form_with(model: @product) do |form| %>
          <% if @product.errors.any? %>
            <div style="color: red">
              <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

              <ul>
                <% @product.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <h2>Please Add The Product information</h2>
          <div>
            <%= form.label :category_id, "Select Category", style: "display: block" %>
            <%= form.collection_select :category_id, @categories, :id, :name, prompt: 'Select a category' %>
          </div>
          <div>
            <%= form.label :product_name, style: "display: block" %>
            <%= form.text_field :name %>
          </div>

          <div>
            <%= form.label :price, style: "display: block" %>
            <%= form.text_field :price %>
          </div>

          <div>
            <%= form.label :images, style: "display: block" %>
            <%= form.file_field :images, multiple: true %>
          </div>

          <div>
            <%= form.label :description, style: "display: block-inline" %>
            <%= form.rich_text_area :description %>
          </div>

          <div class="create-product-button">
            <%= form.submit %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</section>
