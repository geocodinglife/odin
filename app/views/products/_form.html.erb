<div class="container-fluidProduct">
  <%= form_with(model: product) do |form| %>
    <% if product.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>
        <ul>
          <% product.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="div">
      <div class="rowForm rowPosition">
        <h2>Ingrese su informacion</h2>
        <div>
          <%= form.label :first_name, style: "display: block" %>
          <%= form.text_field :first_name, multiple: true, class:"customFormLabel" %>
        </div>
        <div>
          <%= form.label :email, style: "display: block" %>
          <%= form.text_field :email, multiple: true, class:"customFormLabel" %>
        </div>
        <div>
          <%= form.label :phone, style: "display: block" %>
          <%= form.text_field :phone, multiple: true, class:"customFormLabel" %>
        </div>
      </div>
      <div class="rowForm">
        <h2>Ingrese la informacion del producto</h2>
        <div>
          <%= form.label :product_name, style: "display: block" %>
          <%= form.text_field :name, class:"customFormLabel" %>
        </div>
        <div>
          <%= form.label :price, style: "display: block" %>
          <%= form.text_field :price, class:"customFormLabel" %>
        </div>
        <div>
          <%= form.collection_select(:category_id, Category.all , :id, :name, { prompt: "Seleccione una categoria" }, class:"customFormLabel") %>
        </div>
        <div>
          <%= form.label :images, style: "display: block" %>
          <%= form.file_field :images, multiple: true %>
        </div>
        <div>
          <%= form.label :description, style: "display: block-inline" %>
          <%= form.rich_text_area :description %>
        </div>
      </div>
      <div class="btnPosition">
        <%= form.submit "CREAR PRODUCTO", class:'btnProduct' %>
      </div>
    </div>
  </div>
<% end %>
