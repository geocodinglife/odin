<div id="<%= dom_id product %>" class="product-page">
  <div class="images d-flex">
    <div class="px-05 full-img">
    <% if product.images.attached? %>
        <%= image_tag  product.images.first, alt: "Default Image", width: "960", height: "auto" %>
      <% else %>
        <img src="https://a0.muscache.com/im/pictures/miso/Hosting-839082319949828593/original/b239acdd-8dbf-403e-bad4-fa8e05b94b44.jpeg?im_w=720" alt="Default Image" width="960" height="auto" >
      <% end %>
    </div>

    <div class="d-flex flex-wrap four-images">
      <% if product.images.attached? %>
        <% product.images.last(3).each do |image| %>
          <%= image_tag image, alt: product.name, class: "product-image img-flex-divided", width: "240", height: "auto", loading: "lazy" %>
        <% end %>
      <% else %>
          <img src="https://a0.muscache.com/im/pictures/miso/Hosting-839082319949828593/original/b239acdd-8dbf-403e-bad4-fa8e05b94b44.jpeg?im_w=720" alt="Default Image" class="product-image img-flex-divided" width="240" height="auto">
          <img src="https://a0.muscache.com/im/pictures/miso/Hosting-839082319949828593/original/b239acdd-8dbf-403e-bad4-fa8e05b94b44.jpeg?im_w=720" alt="Default Image" class="product-image img-flex-divided" width="240" height="auto">
          <img src="https://a0.muscache.com/im/pictures/miso/Hosting-839082319949828593/original/b239acdd-8dbf-403e-bad4-fa8e05b94b44.jpeg?im_w=720" alt="Default Image" class="product-image img-flex-divided" width="240" height="auto">
          <img src="https://a0.muscache.com/im/pictures/miso/Hosting-839082319949828593/original/b239acdd-8dbf-403e-bad4-fa8e05b94b44.jpeg?im_w=720" alt="Default Image" class="product-image img-flex-divided" width="240" height="auto">
      <% end %>
    </div>
  </div>

  <div class="house-by">
    <div>
  <h1><%= product.name %></h1>

      <p style="color: #333;"><%= product.description.body %></p>
      <div class="d-flex">
       <p style="color: #888;"><%= product.created_at.strftime("%B %e, %Y %l:%M %p") %></p>
      </div>
    </div>
  </div>

  <div class="price d-flex">
    <div class="price-info">
      <h3>$ <%= product.price %> COP</h3>
    </div>
    <% if user_signed_in? %>
      <%= form_with(url: leads_path, method: :post) do |f| %>
        <%= f.hidden_field :first_name, value: current_user.first_name %>
        <%= f.hidden_field :phone, value: current_user.phone %>
        <%= f.hidden_field :email, value: current_user.email %>
        <%= f.hidden_field :product_id, id: 'product', value: product.id %>
        <%= f.button 'Post', class: 'button-popup' %>
        <% end %>
    <% else %>
      <button class="btn showModalButton" data-product-id="<%= product.id %>">Más información</button>
      <%= render "welcome/lead", locals: { product_id: product.id }  %>
    <% end %>
  </div>
</div>

<script>
  document.addEventListener("turbo:load", function() {
  
    const showModalButtons = document.querySelectorAll('.showModalButton');
    const modal = document.getElementById('modal');
    const closeModal = document.getElementById('closeModal');
    const productInput = document.getElementById('product');

    showModalButtons.forEach(function (button) {
      button.addEventListener('click', function () {
        modal.style.display = 'block';

        const productId = button.getAttribute('data-product-id');
        productInput.value = productId;
      });
    });

    closeModal.addEventListener('click', function () {
      modal.style.display = 'none';
    });

    window.addEventListener('click', function (event) {
      if (event.target === modal) {
        modal.style.display = 'none';
      }
    });
  });
</script>