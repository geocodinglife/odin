<div id="<%= dom_id product %>" class="product-page">
  <h1><%= product.name %></h1>

  <div class="product-about d-flex">
    <div class="d-flex align-center">
        <iconify-icon icon="material-symbols:star"></iconify-icon>
        <p>4.88</p>
        <p>193 reviews</p>
    </div>

    <div>
        <p>Superhost</p>
    </div>

    <div>
        <p>Austin, Texas, United States</p>
    </div>
  </div>

  <div class="images d-flex">
    <div class="px-05 full-img">
        <%= product.images.first %>
        <img src="https://a0.muscache.com/im/pictures/miso/Hosting-839082319949828593/original/b239acdd-8dbf-403e-bad4-fa8e05b94b44.jpeg?im_w=960" alt="Default Image">
    </div>

    <div class="d-flex flex-wrap four-images">
      <% if product.images.attached? %>
        <% product.images.last(4).each do |image| %>
          <%#= image_tag image, class: "product-image", alt: product.name, class: "product-image", loading: "lazy" %>
        <% end %>
      <% else %>
          <!-- <img src="https://a0.muscache.com/im/pictures/miso/Hosting-839082319949828593/original/b239acdd-8dbf-403e-bad4-fa8e05b94b44.jpeg?im_w=960" alt="Default Image" class="product-image"> -->

          <img src="https://a0.muscache.com/im/pictures/miso/Hosting-839082319949828593/original/b239acdd-8dbf-403e-bad4-fa8e05b94b44.jpeg?im_w=960" alt="Default Image" class="product-image img-flex-divided">
          <img src="https://a0.muscache.com/im/pictures/miso/Hosting-839082319949828593/original/b239acdd-8dbf-403e-bad4-fa8e05b94b44.jpeg?im_w=960" alt="Default Image" class="product-image img-flex-divided">
          <img src="https://a0.muscache.com/im/pictures/miso/Hosting-839082319949828593/original/b239acdd-8dbf-403e-bad4-fa8e05b94b44.jpeg?im_w=960" alt="Default Image" class="product-image img-flex-divided">
          <img src="https://a0.muscache.com/im/pictures/miso/Hosting-839082319949828593/original/b239acdd-8dbf-403e-bad4-fa8e05b94b44.jpeg?im_w=960" alt="Default Image" class="product-image img-flex-divided">
      <% end %>
    </div>
  </div>


  <div class="house-by">
    <div>
      <h2>Tiny home hosted by Kerthy</h2>
      <div class="d-flex">
        <p class="m-0">2 guest</p>
        <p>1 bedroom</p>
        <p>1 bed</p>
        <p>1 bath</p>
        <p><%= product.description.body %></p>
      </div>
    </div>
  </div>

  <div class="price d-flex">
    <div class="price-info">
      <p>310-310-3102</p>
      <p><%= product.price %></p>
    </div>

    <button>
      Reservar
    </button>
  </div>
</div>