<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <% @product.images.each do |image| %>
    <%= image_tag image %>
  <% end %>

  <p>
    <strong>Description:</strong>
    <%= product.description.body %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>User:</strong>
    <%= product.user_id %>
  </p>

</div>
