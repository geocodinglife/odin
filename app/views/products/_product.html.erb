<div id="<%= dom_id product %>" class="product-page">
  <h1><%= product.name %></h1>

  <div class="images d-flex">
    <div class="px-05 full-img">
        <%= product.images.first %>
        <img src="https://a0.muscache.com/im/pictures/miso/Hosting-839082319949828593/original/b239acdd-8dbf-403e-bad4-fa8e05b94b44.jpeg?im_w=960" alt="Default Image" width="960" height="auto">
    </div>

    <div class="d-flex flex-wrap four-images">
      <% if product.images.attached? %>
        <% product.images.last(4).each do |image| %>
          <%#= image_tag image, class: "product-image", alt: product.name, class: "product-image", loading: "lazy" %>
        <% end %>
      <% else %>
          <!-- <img src="https://a0.muscache.com/im/pictures/miso/Hosting-839082319949828593/original/b239acdd-8dbf-403e-bad4-fa8e05b94b44.jpeg?im_w=960" alt="Default Image" class="product-image"> -->

          <img src="https://a0.muscache.com/im/pictures/miso/Hosting-839082319949828593/original/b239acdd-8dbf-403e-bad4-fa8e05b94b44.jpeg?im_w=960" alt="Default Image" class="product-image img-flex-divided" width="240" height="auto">
          <img src="https://a0.muscache.com/im/pictures/miso/Hosting-839082319949828593/original/b239acdd-8dbf-403e-bad4-fa8e05b94b44.jpeg?im_w=960" alt="Default Image" class="product-image img-flex-divided" width="240" height="auto">
          <img src="https://a0.muscache.com/im/pictures/miso/Hosting-839082319949828593/original/b239acdd-8dbf-403e-bad4-fa8e05b94b44.jpeg?im_w=960" alt="Default Image" class="product-image img-flex-divided" width="240" height="auto">
          <img src="https://a0.muscache.com/im/pictures/miso/Hosting-839082319949828593/original/b239acdd-8dbf-403e-bad4-fa8e05b94b44.jpeg?im_w=960" alt="Default Image" class="product-image img-flex-divided" width="240" height="auto">
      <% end %>
    </div>
  </div>

  <div class="house-by">
    <div>
      <p style="color: #333;"><%= product.description.body %></p>
      <div class="d-flex">
       <p style="color: #888;"><%= product.created_at.strftime("%B %e, %Y %l:%M %p") %></p>
      </div>
    </div>
  </div>

  <div class="price d-flex">
    <div class="price-info">
      <h3>$ <%= product.price %> COP</h3>
    </div>

    <button>
      Reservar
    </button>
  </div>
</div>