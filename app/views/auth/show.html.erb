<div class="alert-box signin-box">
  <div>
    <%= image_tag "maple-leaf.jpg" %>
  </div>

  <div class="signin-box-form">
    <p class="text-2xl text-gray-900 font-medium mb-3">¿Cuál es tu teléfono?</p>

    <%= form_with(url: auth_path, html: { data: { turbo: false } }) do |f| %>
      <%= f.phone_field :phone, value: params[:phone], placeholder: "333333333", class: "w-full rounded-md border-gray-300" %>
      <%= f.submit "Continue" %>
    <% end %>
  </div>
</div>