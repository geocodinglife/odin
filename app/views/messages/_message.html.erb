<style>
  .message-container {
    background-color: #cbd5e0;
    padding: 0.5rem 0.75rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 0.5rem;
    border-radius: 0.25rem;
    box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.1);
  }

  .message-content {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .message-details {
    display: flex;
    gap: 0.125rem;
  }

  .user-email {
    color: #4a90e2;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .message-text {
    font-size: 0.875rem;
    font-weight: 600;
  }

  .message-actions {
    display: flex;
    gap: 0.375rem;
  }

  .edit-button,
  .delete-button {
    font-size: 0.875rem;
    font-weight: 500;
    color: white;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    text-align: center;
    text-decoration: none;
    cursor: pointer;
  }

  .edit-button {
    background-color: #90cdf4;
  }

  .delete-button {
    background-color: #e53e3e;
  }
</style>

<%= turbo_frame_tag "message_#{message.id}", class: 'message-container' do %>
  <div class="message-content">
    <div class="message-details">
      <span class="user-email"><%= message.user.email %></span>
      <span class="message-text"><%= message.text %></span>
    </div>

    <div class="message-actions">
      <%= link_to edit_room_message_path(message, room_id: message.room), class:'edit-button' do %>
        Edit
      <% end %>
      <%= button_to room_message_path(message.room, message), method: :delete, class:'delete-button' do %>
        Delete
      <% end %>
    </div>
  </div>
<% end %>