<style>
  .form-container {
    display: flex;
    flex-direction: column;
  }

  .message-form {
    width: 100%;
    display: flex;
    flex-direction: column;
  }

  .form-fields {
    display: flex;
    width: 100%;
  }

  .message-input {
    flex: 1;
    border: 1px solid #cbd5e0;
    border-radius: 0.25rem;
    font-weight: 600;
    font-size: 0.875rem;
    padding: 0.25rem 0.5rem;
    margin-right: 0.25rem;
  }

  .submit-button {
    background-color: #38a169;
    color: white;
    font-weight: 600;
    font-size: 0.875rem;
    padding: 0.5rem 1rem;
    border-radius: 0.25rem;
    cursor: pointer;
  }
</style>

<div data-controller="form" class="form-container">
  <%= form_with(model: [room, message], id: 'message_form', class: 'message-form', data: { controller: 'form', action: 'submit->form#resetComponent' }) do |f| %>
    <div class="form-fields">
      <%= f.text_field :message, class: 'message-input' %>
      <%= f.submit class: 'submit-button' %>
    </div>
  <% end %>
</div>
